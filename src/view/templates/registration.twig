{% extends "base.twig" %}

{%  block content  %}
    <section class="sec-center">
        <form action="/registration" method="POST" enctype="multipart/form-data">
            <div class="container">
                <h1 class="h1-reg-log">Registration</h1>
                <a  href="/log" class="redirect">Login</a>
                <hr>
                <div class="row">
                    <div class="col-lg-2">
                        <label>Username</label>
                    </div>
                    <div class="col-lg-6" id="col-username">
                        <input type="text" placeholder="Enter Username" name="username" >
                    </div>
                </div>
                <p class="error-r">{{ errors[0] }}</p>

                <div class="row">
                    <div class="col-lg-2">
                        <label>Email</label>
                    </div>
                    <div class="col-lg-6" id="col-email">
                        <input type="text" placeholder="Enter Email" name="email" >
                    </div>
                </div>
                <p class="error-r">{{ errors[1] }}</p>

                <div class="row">
                    <div class="col-lg-2">
                        <label>BirthDate</label>
                    </div>
                    <div class="col-lg-6" id="col-birthdate">
                        <input type="date" placeholder="Enter Birthdate" name="birthdate" >
                    </div>
                </div>
                <p class="error-r">{{ errors[2] }}</p>


                <div class="row">
                    <div class="col-lg-2">
                        <label>Password</label>
                    </div>
                    <div class="col-lg-6" id="col-password">
                        <input type="password" placeholder="Enter Password" name="psw" >
                    </div>
                </div>
                <p class="error-r">{{ errors[3] }}</p>


                <div class="row">
                    <div class="col-lg-2">
                        <label>Confirm Password</label>
                    </div>
                    <div class="col-lg-6" id="col-confirm">
                        <input type="password" placeholder="Confirm Password" name="confirmpsw" >
                    </div>
                </div>
                <p class="error-r">{{ errors[4] }}</p>

                <div class="row">
                    <div class="col-lg-2">
                        <label>Profile Image</label>
                    </div>
                    <input type="file" name="myfile" multiple accept=".jpg, .jpeg, .png"/> </div>
            </div>
            <!-- <p class="error-r">{{ errors[5] }}</p> -->
            <!--<button id="submit" type="button" class="btn btn-primary" name="submit">Sign up</button> -->
            <input type="submit" name="submit" value="Sign Up" class="submit">



            </div>

        </form>
    </section>
{% endblock %}
